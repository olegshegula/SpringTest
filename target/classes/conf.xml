<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

  <bean id="client" class="myBeans.Client">
    <constructor-arg value="1"/>
    <constructor-arg value="John Smith"/>
  </bean>
  <bean id="eventLogger" class="myLoggers.ConsoleEventLogger"/>
  <bean id="app" class="App">
    <constructor-arg ref="client"/>
    <constructor-arg ref="eventLogger"/>
  </bean>
  <bean id="event" class="myBeans.Event" scope="prototype">
      <constructor-arg>
          <bean class="java.util.Date"/>
      </constructor-arg>
      <constructor-arg ref="dateFormat"/>
  </bean>

<bean id="dateFormat" class="java.text.DateFormat"
  factory-method="getDateTimeInstance"/>

  <bean id="fileEventLogger" class="myLoggers.FileEventLogger">
    <!--<constructor-arg value="1.txt"/>-->
  </bean>

</beans>
